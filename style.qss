    background-color: #3a3a3a;
}

/* QFontDialog */
QFontDialog {
    background-color: #2b2b2b;
}

QFontDialog QListView {
    background-color: #1a1a1a;
    border: 1px solid #3a3a3a;
}

QFontDialog QGroupBox {
    background-color: #2b2b2b;
    border: 1px solid #3a3a3a;
    margin-top: 14px;
