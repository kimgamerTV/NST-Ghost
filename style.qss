}

/* QColorDialog */
QColorDialog {
    background-color: #2b2b2b;
}

QColorDialog QLabel {
    color: #cccccc;
}

QColorDialog QSpinBox,
QColorDialog QLineEdit {
    background-color: #1a1a1a;
}

QColorDialog QPushButton {
    min-width: 80px;
}

/* QProgressDialog */
QProgressDialog {
    background-color: #2b2b2b;
}

QProgressDialog QLabel {
    color: #cccccc;
    margin-bottom: 12px;
}

QProgressDialog QProgressBar {
